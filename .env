# API Keys for Research Paper Analysis App

# Google Fact Check API Key (optional)
# Get from: https://console.developers.google.com/
# GOOGLE_FACT_CHECK_KEY=your_google_fact_check_api_key_here

# CrossRef API Key (optional)
# Get from: https://www.crossref.org/services/metadata-delivery/rest-api/
# CROSSREF_API_KEY=your_crossref_api_key_here

# Semantic Scholar API Key (optional)
# Get from: https://www.semanticscholar.org/product/api
# SEMANTIC_SCHOLAR_KEY=your_semantic_scholar_api_key_here

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///instance/app.db

# Security Keys
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Upload Configuration
UPLOAD_DIR=uploads
REPORT_DIR=reports
CORPUS_DIR=corpus
MAX_UPLOAD_MB=25
ALLOWED_EXT=.pdf

# Feature Flags
USE_HF_SUMMARIZER=true
ALLOW_GUEST_UPLOADS=false

# API Configuration
SEMANTIC_SCHOLAR_BASE=https://api.semanticscholar.org/graph/v1/paper/search
SEMANTIC_SCHOLAR_FIELDS=title,authors,year,venue