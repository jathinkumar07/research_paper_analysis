# Flask Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///instance/app.db

# Upload and Storage Settings
UPLOAD_DIR=uploads
REPORT_DIR=reports
CORPUS_DIR=corpus
MAX_UPLOAD_MB=25
ALLOWED_EXT=.pdf

# API Settings
SEMANTIC_SCHOLAR_BASE=https://api.semanticscholar.org/graph/v1/paper/search
SEMANTIC_SCHOLAR_FIELDS=title,authors,year,venue
CROSSREF_API_KEY=your-crossref-api-key-here

# Feature Flags
USE_HF_SUMMARIZER=true
ALLOW_GUEST_UPLOADS=false

# JWT Settings
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Fact-Check Configuration
# GOOGLE_FACTCHECK_SERVICE_ACCOUNT_FILE=/path/to/service-account.json
# GOOGLE_API_KEY=your-google-api-key-here
FACTCHECK_USE=disabled
FACTCHECK_TIMEOUT=8.0
FACTCHECK_MAX_RETRIES=3
FACTCHECK_DELAY=0.5